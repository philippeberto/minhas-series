<%- include ('../partials/header') %>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2><%=serie.name%></h2>
            <p class="lead">Comentários</p>
            <form method="post">
              <textarea class="form-control mb-2" name="comentario"></textarea>
              <input type="submit" value="Adicionar Comentário" class="float-right">
            </form>
          </div>
        </div>
        <div class="col-lg-8 mx-auto">
          <% serie.comments.forEach(comment => { %>              
            <div class="card bg-info my-3 text-white">
              <div class="card-body">
                <%= comment %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </section>

<%- include ('../partials/footer') %>